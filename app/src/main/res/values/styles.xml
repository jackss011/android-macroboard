<resources>


    <!-- Application -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!-- Toolbar title text -->
    <style name="ToolbarTitle" parent="@android:style/TextAppearance.Material.WindowTitle">
        <item name="android:textColor">#FFFFFF</item>
    </style>


    <!--Dividers-->
    <style name="Divider">
        <item name="android:background">@color/colorDivider</item>
    </style>

    <style name="Divider.Horizontal">
        <item name="android:layout_height">@dimen/divider_size</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="Divider.Vertical">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">@dimen/divider_size</item>
    </style>


    <!--BottomNavigation-->
    <style name="BottomNavigation">
        <item name="android:background">@color/bNav_background</item>
        <item name="defaultItemColor">@color/bNav_item</item>
        <item name="selectedItemColor">@color/nNav_itemSel</item>
        <item name="cursorHeight">4dp</item>
        <item name="cursorAnimDuration">100</item>
        <item name="android:elevation">6dp</item>
    </style>

    <style name="BottomNavigation.Condensed">
        <item name="condensedMode">label</item>
    </style>


    <!--Knob-->
    <style name="Knob">
        <item name="backgroundRadius">2dp</item>
        <item name="circleColor">#cacaca</item>
        <item name="strokeColor">#555</item>
        <item name="strokeWidth">1dp</item>
        <item name="notchColor">#666</item>
        <item name="notchDisplacement">0.3</item>
        <item name="notchSizePerc">0.06</item>
        <item name="android:elevation">1dp</item>
    </style>


    <!--Trackpad-->
    <style name="Trackpad">
        <item name="android:elevation">1dp</item>
    </style>


    <!--MaterialButton-->
    <style name="MaterialButton">
        <item name="backgroundColor">@color/colorAccent</item>
        <item name="android:elevation">2dp</item>
    </style>

    <style name="MaterialButton.Cut">
        <item name="iconSrc">@drawable/bni_dummy_icon</item>
        <item name="backgroundSaturationMultiplier">0.87</item>
    </style>


</resources>
