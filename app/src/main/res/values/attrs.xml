<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- TrackpadView -->
    <declare-styleable name="TrackpadView" >
        <attr name="baseColor" format="color"/>
        <attr name="borderRadius" format="dimension"/>
    </declare-styleable>
    
    <!--BottomView-->
    <declare-styleable name="BottomNavigation">
        <attr name="defaultItemColor" format="color"/>
        <attr name="selectedItemColor" format="color"/>
        <attr name="cursorColor" format="color"/>
        <attr name="condensedMode" format="enum">
            <enum name="none" value="0"/>
            <enum name="label" value="1"/>
            <enum name="icon" value="2"/>
        </attr>
        <attr name="cursorAnimDuration" format="integer"/>
        <attr name="cursorHeight" format="dimension"/>
    </declare-styleable>

    <!-- Knob -->
    <declare-styleable name="Knob" >
        <attr name="backgroundColor" format="color"/>
        <attr name="backgroundRadius" format="dimension"/>
        <attr name="circleColor" format="color"/>
        <attr name="strokeColor" format="color"/>
        <attr name="strokeWidth" format="dimension"/>
        <attr name="notchColor" format="color"/>
        <attr name="notchDisplacement" format="float"/>
        <attr name="notchSizePerc" format="float"/>
    </declare-styleable>

    <declare-styleable name="MaterialButton">
        <attr name="backgroundColor"/>
        <attr name="iconSrc" format="reference"/>
        <attr name="backgroundSaturationMultiplier" format="float"/>
    </declare-styleable>

</resources>
